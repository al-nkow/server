    // ================ CATEGORIES ================
    .categories-section.p-2.p-sm-2.p-md-5
      .container
        .row.text-center
          each category in categories
            .col-xs-12.col-sm-6.p-2.text-left
              a(href="/products?category=" + category._id).categories-section__item.text-left= category.name

    // ================ SHOPS =====================
    .shops-section.p-5
      .container
        .row.text-center
          each shop in shops
            .col-6.col-sm-6.col-md-3
              .shops-section__item.p-2
                img.shops-section__image(src=shop.image alt="")

    .footer-section
