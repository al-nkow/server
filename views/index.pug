    script.
      document.getElementById('searchForm').addEventListener('submit', function (e) {
        e.preventDefault();
        var inpValue = document.getElementById('searchInp').value;
        if (inpValue) {
            window.location.href = '/products?search=' + inpValue;
        }
      });